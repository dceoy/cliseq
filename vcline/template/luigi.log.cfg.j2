[loggers]
keys=root

[handlers]
keys=consoleHandler,fileHandler

[formatters]
keys=simpleFormatter

[logger_root]
level={{ level }}
handlers=consoleHandler,fileHandler

[handler_consoleHandler]
class=StreamHandler
level={{ level }}
formatter=simpleFormatter
args=(sys.stdout,)

[handler_fileHandler]
class=FileHandler
level={{ level }}
formatter=simpleFormatter
args=('{{ filename }}', 'w')

[formatter_simpleFormatter]
format=%(levelname)s: %(message)s
